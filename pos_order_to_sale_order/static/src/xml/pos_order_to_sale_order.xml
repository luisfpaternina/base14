<?xml version="1.0" encoding="UTF-8"?>

<template id="template" xml:space="preserve">

    <t t-name="CreateQuotationButton" owl="1">
        <span class="control-button js_save_quotation" style="background-color: #875a7b;">
            <span> </span>
            <span style="color: white">Create Quotation pater</span>
        </span>
    </t>

    <t t-name="CustomRewardButtons" owl="1">
       <span class="control-button" t-att-class="is_available()?    'highlight' : ''">
           <i class="fa fa-star"></i>
           <span> </span>
           <span>My Button</span>
       </span>
    </t>

    <t t-name="CreateSaleOrderButtonWidget" owl="1">
        <span
            class="control-button order-split"
            id="pos_new_sale_order"
            t-att-style='widget.is_visible() ? "display: block;" : "display: none"'
        >
            <i class="fa fa-download" />Order
        </span>
    </t>

     <t t-name="CreateSaleOrderScreenWidget" owl="1">
        <div class="screen">
            <div class="screen-content">
                <div class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left' />
                        Back
                    </span>
                    <h1>Create Sale Order</h1>
                </div>
                <div class="centered-content">
                    <div class="paymentmethods">
                        <div
                            class="button paymentmethod"
                            id="button-create-draft-order"
                            action="draft"
                        >
                            Create Draft Sale Order
                        </div><div
                            class="button paymentmethod"
                            id="button-create-confirmed-order"
                            action="confirmed"
                        >
                            Create Confirmed Sale Order
                        </div><div
                            class="button paymentmethod"
                            id="button-create-delivered-order"
                            action="delivered"
                        >
                            Create Delivered Sale Order
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </t>
</template>
